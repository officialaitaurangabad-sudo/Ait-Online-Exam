# Logging
LOG_LEVEL=debug

# CORS
CORS_ORIGIN=http://localhost:5173

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads/dev

# Session
SESSION_SECRET=dev-session-secret-change-in-production

# Redis (Optional for development)
