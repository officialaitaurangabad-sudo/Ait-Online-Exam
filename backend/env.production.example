# Production Environment Configuration
NODE_ENV=production
PORT=5000

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ait-exam-platform-prod

# JWT Configuration (Use strong secrets in production)
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# Email Configuration (Production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-production-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=AIT Exam Platform

# Cloudinary Configuration (Production)
CLOUDINARY_CLOUD_NAME=your-production-cloud-name
CLOUDINARY_API_KEY=your-production-api-key
CLOUDINARY_API_SECRET=your-production-api-secret

# Frontend URL
CLIENT_URL=https://your-domain.com

# Rate Limiting (Stricter for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Bcrypt Rounds (Higher for security)
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=https://your-domain.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads/prod

# Session
SESSION_SECRET=your-super-secure-session-secret

# Redis (Production)
REDIS_URL=redis://your-redis-host:6379

# API Keys (Production)
GOOGLE_ANALYTICS_ID=GA-PROD-ID
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Security Headers
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true

# SSL/TLS
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Monitoring
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
DATADOG_API_KEY=your-datadog-api-key
